    <ScrollView
        android:layout_below="@id/newTask"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <EditText
                android:padding="10dp"
                android:id="@+id/task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title of Task"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:layout_below="@id/task_title"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="95dp"
                    android:src="@drawable/reminder"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mdtp_white"
                        android:text="Set Reminder"
                        android:layout_marginTop="17dp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/reminder_del"
                android:layout_width="match_parent"
                android:layout_below="@id/reminder"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/reminder_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_bg"
                        android:padding="15dp"
                        android:src="@drawable/ic_cal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date : "
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="30dp" />
                    <TextView
                        android:id="@+id/task_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="-----"
                        android:textStyle="bold|italic"
                        android:layout_marginLeft="50dp"
                        android:textSize="15sp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/reminder_"
                    android:id="@+id/reminder_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_bg"
                        android:padding="10dp"
                        android:src="@drawable/time"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From time : "
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="30dp"/>
                    <TextView
                        android:id="@+id/from_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="-----"
                        android:textStyle="bold|italic"
                        android:layout_marginLeft="30dp"
                        android:textSize="15sp"/>


                </LinearLayout>
<!--                <LinearLayout-->
<!--                    android:layout_below="@id/reminder_from"-->
<!--                    android:id="@+id/reminder_to"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:padding="10dp"-->
<!--                    android:layout_marginTop="0dp"-->
<!--                    android:orientation="horizontal">-->

<!--                    <ImageView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:background="@drawable/icon_bg"-->
<!--                        android:padding="10dp"-->
<!--                        android:src="@drawable/time"/>-->

<!--                    <TextView-->
<!--                        android:id="@+id/t"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="To time : "-->
<!--                        android:layout_gravity="center_vertical"-->
<!--                        android:layout_marginStart="20dp"-->
<!--                        android:textSize="20sp"/>-->
<!--                    <TextView-->
<!--                        android:id="@+id/to_time"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center_vertical"-->
<!--                        android:text="click to set time"-->
<!--                        android:textStyle="bold|italic"-->
<!--                        android:layout_marginLeft="10dp"-->
<!--                        android:textSize="15sp"/>-->


<!--                </LinearLayout>-->

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reminder_del"
                android:padding="1dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_bg"
                    android:padding="10dp"
                    android:src="@drawable/sub_point"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub Points"
                        android:layout_marginLeft="30dp"
                        />

                    <EditText
                        android:id="@+id/task_sub_points"
                        android:inputType="none"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="1.\n2."
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_below="@id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"
                android:textColor="@color/mdtp_white"/>
            <com.google.android.gms.ads.AdView
                android:id="@+id/ad_view"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                app:adSize="BANNER"
                app:adUnitId="@string/banner_ad_unit_id"
                />

        </RelativeLayout>




    </ScrollView>
    
</RelativeLayout>